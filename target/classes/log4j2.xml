<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="info">
	<Appenders>				
	    <!-- LOG -->
		<RollingFile name="LogFile" fileName="C:\\Users\\David\\Desktop\\Computacion Ubicua\\logs\\log.log"
			filePattern="C:\\Users\\David\\Desktop\\Computacion Ubicua\\logs\\Ubipark-%d{yyyy}-%i.log.gz">
			<PatternLayout
				pattern="%n%d{yyyy-MM-dd HH:mm:ss.SSS} %-5level %-30l %logger{36} ### %msg"
				header="-- UBIPARK LOGS --" />
			<Policies>
				<TimeBasedTriggeringPolicy />
				<SizeBasedTriggeringPolicy size="10 MB" />
			</Policies>
			<DefaultRolloverStrategy max="20"/>
		</RollingFile>		
	    <!-- LOGDB -->
		<RollingFile name="LogFileDB" fileName="C:\\Users\\David\\Desktop\\Computacion Ubicua\\logs\\logdb.log"
			filePattern="C:\\Users\\David\\Desktop\\Computacion Ubicua\\logs\\Ubipark-%d{yyyy}-%i.logdb.gz">
			<PatternLayout
				pattern="%n%d{yyyy-MM-dd HH:mm:ss.SSS} %-5level %-30l %logger{36} ### %msg"
				header="-- UBIPARK DATABASE LOGS --" />
			<Policies>
				<TimeBasedTriggeringPolicy />
				<SizeBasedTriggeringPolicy size="10 MB" />
			</Policies>
			<DefaultRolloverStrategy max="20"/>
		</RollingFile>		
	    <!-- LOGMQTT -->
		<RollingFile name="LogFileMQTT" fileName="C:\\Users\\David\\Desktop\\Computacion Ubicua\\logs\\logmqtt.log"
			filePattern="C:\\Users\\David\\Desktop\\Computacion Ubicua\\logs\\Ubipark-%d{yyyy}-%i.logmqtt.gz">
			<PatternLayout
				pattern="%n%d{yyyy-MM-dd HH:mm:ss.SSS} %-5level %-30l %logger{36} ### %msg"
				header="-- UBIPARK MQTT LOGS --" />
			<Policies>
				<TimeBasedTriggeringPolicy />
				<SizeBasedTriggeringPolicy size="10 MB" />
			</Policies>
			<DefaultRolloverStrategy max="20"/>
		</RollingFile>	
	</Appenders>
	<Loggers>
	    <!-- LOG -->
		<Logger name="log" additivity="FALSE" level="INFO">
            <AppenderRef ref="LogFile" level="INFO" />
        </Logger>s
	    <!-- LOGDB -->
		<Logger name="logdb" additivity="FALSE" level="INFO">
            <AppenderRef ref="LogFileDB" level="INFO" />
        </Logger>
	    <!-- LOGMQTT -->
		<Logger name="logmqtt" additivity="FALSE" level="INFO">
            <AppenderRef ref="LogFileMQTT" level="INFO" />
        </Logger>
	</Loggers>
</Configuration>